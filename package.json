{
	"name": "wd_s",
	"version": "2.0.1",
	"private": true,
	"description": "A starter theme from WebDevStudios.",
	"author": "WebDevStudios <contact@webdevstudios.com>",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress",
		"Theme"
	],
	"homepage": "https://github.com/WebDevStudios/wd_s/#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WebDevStudios/wd_s.git"
	},
	"bugs": {
		"url": "https://github.com/WebDevStudios/wd_s/issues"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=7"
	},
	"main": "src/index.js",
	"devDependencies": {
		"@arkweid/lefthook": "^0.7.2",
		"@tailwindcss/postcss7-compat": "^2.0.4",
		"@wordpress/prettier-config": "^1.0.1",
		"@wordpress/scripts": "^14.0.1",
		"browser-sync": "^2.26.14",
		"concurrently": "^6.0.0",
		"copy-webpack-plugin": "^6.4.1",
		"css-minimizer-webpack-plugin": "^1.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"imagemin-webpack-plugin": "^2.4.2",
		"postcss-preset-env": "^6.7.0",
		"rimraf": "^3.0.2",
		"svgstore-cli": "^2.0.0",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.4",
		"webpack-merge": "^5.7.3"
	},
	"scripts": {
		"build": "wp-scripts build --config webpack.prod.js && npm run icons && npm run pot",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"clean": "rimraf build",
		"dev": "npm run start",
		"format-php": "composer run-script format",
		"format:js": "wp-scripts format-js",
		"icons": "svgstore build/images/icons/*.svg --inline -o build/images/icons/sprite.svg",
		"lint": "concurrently \"npm run lint:js\" \"npm run lint:css\" \"npm run lint:md:docs\" \"npm run lint:pkg-json\" \"npm run lint:php\"",
		"lint:css": "wp-scripts lint-style '**/*.scss'",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:js": "wp-scripts lint-js",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:md:js": "wp-scripts lint-md-js",
		"lint:php": "composer run-script lint",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"pot": "composer run-script pot",
		"start": "npm run clean && wp-scripts start",
		"sync": "browser-sync start --https --proxy 'https://wdunderscores.test' --no-open --files \"build/*.*, **/*.html, **/*.php, !node_modules/**/*.html\"",
		"test:e2e": "wp-scripts test-e2e",
		"test:unit": "wp-scripts test-unit-js",
		"postinstall": "composer install --quiet && wp-scripts build"
	}
}
