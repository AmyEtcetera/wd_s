					},
					"h3": {
						"typography": {
							"fontSize": "1.3em"
						}
					},
					"h4": {
						"typography": {
							"fontSize": "1em"
						}
					},
					"h5": {
						"typography": {
							"fontSize": "0.8em"
						}
					},
					"h6": {
						"typography": {
							"fontSize": "0.7em"
						}
					}
				}
			}
