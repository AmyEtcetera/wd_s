{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"typography": {
			"fluid": true
		},
		"color": {
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"duotone": [],
			"gradients": [],
			"link": false,
			"palette": [
				{
					"color": "#425a5e",
					"slug": "primary-100",
					"name": "Primary 100"
				},
				{
					"color": "#2d3d40",
					"slug": "primary-200",
					"name": "Primary 200"
				},
				{
					"color": "#3f4040",
					"slug": "primary-300",
					"name": "Primary 300"
				},
				{
					"color": "#fff",
					"slug": "secondary-100",
					"name": "Secondary 100"
				},
				{
					"color": "#e3e4eb",
					"slug": "secondary-200",
					"name": "Secondary 200"
				},
				{
					"color": "#d3d3d3",
					"slug": "secondary-300",
					"name": "Secondary 300"
				},
				{
					"color": "#f48d60",
					"slug": "tertiary-100",
					"name": "Tertiary 100"
				},
				{
					"color": "#f47c48",
					"slug": "tertiary-200",
					"name": "Tertiary 200"
				},
				{
					"color": "#f3713c",
					"slug": "tertiary-300",
					"name": "Tertiary 300"
				}
			],
			"text": true,
			"background": true,
			"defaultGradients": false,
			"defaultPalette": false
		},
		"spacing": {
			"blockGap": true
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--secondary-100)",
			"text": "var(--wp--preset--color--primary-300)"
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"elements": {
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--huge)"
                }
            },
			"button": {
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-300)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-200)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-200)"
					}
				}
			},
			"link": {
				":hover": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				},
				":focus": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				},
				":active": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				}
			}
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontWeight": "bold"
				},
				"spacing": {
					"margin": {
						"top": "0.5em",
						"bottom": "0.5em"
					}
				},
				"elements": {
					"h1": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--huge)"
						}
					},
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--x-large)"
						}
					},
					"h3": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--large)"
						}
					},
					"h4": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--medium)"
						}
					},
					"h5": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--normal)"
						}
					}
				}
			},
			"core/paragraph": {
				"typography": {
					"lineHeight": "1.5",
					"fontSize": "var(--wp--preset--font-size--normal)"
				},
				"spacing": {
					"padding": {
						"bottom": "1em"
					}
				}
			}
		}
	}
}
