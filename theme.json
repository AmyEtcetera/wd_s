	"styles": {
		"color": {
			"background": "var(--wp--preset--color--secondary-100)",
			"text": "var(--wp--preset--color--primary-300)"
		},
        "spacing": {
            "blockGap": "1.5rem"
        },
		"elements": {
			"button": {
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-300)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-200)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-200)"
					}
				}
			},
			"link": {
				":hover": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				},
				":focus": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				},
				":active": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				}
			}
		},
		"blocks": {
			"core/heading": {
